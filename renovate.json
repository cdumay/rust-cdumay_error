{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignoreTests": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "groupName": null
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "all non-major dependencies"
    }
  ]
}